<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/descriptionScrollContainer"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/productImage"
            android:layout_width="0dp"
            android:layout_height="300dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_medium"
            android:layout_marginTop="@dimen/keyline_medium"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/productImage">

            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="30" />

        </Constraint>

        <Constraint
            android:id="@+id/productRegularPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_medium"
            android:layout_marginEnd="@dimen/keyline_medium"
            android:textSize="24sp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/productImage">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="24" />
        </Constraint>

        <Constraint
            android:id="@+id/productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_medium"
            android:layout_marginTop="@dimen/keyline_medium"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/productPrice">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="28" />
        </Constraint>

        <Constraint
            android:id="@+id/descriptionScrollContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_medium"
            android:layout_marginTop="@dimen/keyline_small"
            android:layout_marginEnd="@dimen/keyline_medium"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/productTitle" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/productImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/keyline_medium"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_medium"
            android:layout_marginEnd="@dimen/keyline_medium"
            motion:layout_constraintEnd_toStartOf="@id/productRegularPrice"
            motion:layout_constraintStart_toEndOf="@id/productImage"
            motion:layout_constraintTop_toBottomOf="@id/productTitle">

            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="20" />
        </Constraint>

        <Constraint
            android:id="@+id/productRegularPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_small"
            motion:layout_constraintBottom_toBottomOf="@id/productPrice"
            motion:layout_constraintStart_toEndOf="@+id/productPrice"
            motion:layout_constraintTop_toTopOf="@id/productPrice">

            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="16" />
        </Constraint>

        <Constraint
            android:id="@+id/productTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_medium"
            android:layout_marginTop="@dimen/keyline_medium"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/productImage"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customFloatValue="20" />
        </Constraint>

        <Constraint
            android:id="@+id/descriptionScrollContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_small"
            android:layout_marginTop="@dimen/keyline_small"
            android:layout_marginEnd="@dimen/keyline_medium"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/productImage" />

    </ConstraintSet>
</MotionScene>